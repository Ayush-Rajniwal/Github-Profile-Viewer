{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-props-no-spreading": 0
    },
    "settings": {
        "import/resolver": {
            "alias":{
                "map": [
                   [
                       "@components",
                       "./src/app/components"
                   ],
                   [
                       "@containers",
                       "./src/app/containers"
                   ],
                    ["@components", "./src/app/components"],
                    ["@images", "./src/assets/images"],
                    ["@containers", "./src/app/containers"],
                    ["@redux", "./src/app/redux"],
                    ["@src", "./src"],
                    ["@styles", "./src/styles"],
                    ["@provider", "./src/providers"],
                    ["@locales", "./src/locales"],
                    ["@constants","./src/constants"],
                    ["@services","./src/services"],
                    ["@utils","./src/utils"]
               ],
                "extensions": [".js", ".jsx", ".json"] 
            }
        }
    }
}
